{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "maxNodeModuleJsDepth": 0,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": [
      "vite/client",
    ],
    "paths": {
      "@packages/wrapper-quasar/*": ["src/*"],
      "@fancy-crud/core": ["../core/src/index.ts"],
      "@fancy-crud/vue": ["../vue/src/index.ts"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
  ]
}
